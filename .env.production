# ====================================
# KRATOS ELECTION SYSTEM - PRODUCTION
# ====================================

# ----------------
# Database Settings
# ----------------
POSTGRES_DB=kratos_election
POSTGRES_USER=kratos_user
# IMPORTANT: Change this to a strong password!
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

# Database connection URL
DATABASE_URL=postgresql+asyncpg://kratos_user:CHANGE_THIS_TO_STRONG_PASSWORD@database:5432/kratos_election

# ----------------
# Security Settings
# ----------------
# CRITICAL: Generate a new secret key using: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_RANDOM_STRING

# Device fingerprinting (set to true for enhanced security)
ENFORCE_DEVICE_FINGERPRINT=true

# ----------------
# Admin Configuration
# ----------------
ADMIN_USERNAME=admin

# IMPORTANT: Generate new password hashes using argon2
# Python example:
# from argon2 import PasswordHasher
# ph = PasswordHasher()
# hash = ph.hash("your_secure_password")
ADMIN_PASSWORD_HASH='$$argon2id$$v=19$$m=65536,t=3,p=1$$CHANGE_THIS_HASH'
ADMIN_PERMISSIONS=all

# Format: username:password_hash (comma-separated for multiple users)
ADMIN_USERS='admin:$$argon2id$$v=19$$m=65536,t=3,p=1$$CHANGE_THIS_HASH'

# ----------------
# User Configuration
# ----------------
# Electoral Commission Officials
EC_OFFICIAL_USERS='official1:$$argon2id$$v=19$$m=65536,t=3,p=1$$CHANGE_THIS_HASH,official2:$$argon2id$$v=19$$m=65536,t=3,p=1$$CHANGE_THIS_HASH'

# Polling Agents
POLLING_AGENT_USERS='agent1:$$argon2id$$v=19$$m=65536,t=3,p=1$$CHANGE_THIS_HASH,agent2:$$argon2id$$v=19$$m=65536,t=3,p=1$$CHANGE_THIS_HASH'

# ----------------
# Email Configuration
# ----------------
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
# For Gmail, use App Password: https://support.google.com/accounts/answer/185833
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME=Kratos Voting System

# ----------------
# Application Settings
# ----------------
# Set to production for optimized performance
ENVIRONMENT=production

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable CORS for specific origins (comma-separated)
# CORS_ORIGINS=http://10.148.187.19,http://localhost:3000

# ----------------
# Performance Settings
# ----------------
# Number of Uvicorn workers (typically 2x CPU cores)
WORKERS=2

# Maximum upload file size (in MB)
MAX_UPLOAD_SIZE=20

# Session timeout (in minutes)
SESSION_TIMEOUT=60

# ----------------
# Security Headers
# ----------------
# Enable HSTS (HTTP Strict Transport Security)
ENABLE_HSTS=true

# Enable CSP (Content Security Policy)
ENABLE_CSP=true